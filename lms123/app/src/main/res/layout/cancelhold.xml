<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:id="@+id/mainText"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="100dp"
        android:padding="5dp"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No of books issued : "
        android:id="@+id/issued_books"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="100dp"
        android:padding="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fine: Rs. "
        android:id="@+id/fine"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="100dp"
        android:padding="5dp"
         />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/cancel"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        fancy:fb_borderColor="#00bfff"
        fancy:fb_borderWidth="5dp"
        fancy:fb_defaultColor="#000066"
        fancy:fb_focusColor="#9bd823"
        fancy:fb_radius="30dp"
        fancy:fb_text="Search Book"
        fancy:fb_textColor="#FFFFFF" />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/issuebook"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        fancy:fb_borderColor="#00bfff"
        fancy:fb_borderWidth="5dp"
        fancy:fb_defaultColor="#000066"
        fancy:fb_focusColor="#9bd823"
        fancy:fb_radius="30dp"
        fancy:fb_text="Issue Book"
        fancy:fb_textColor="#FFFFFF" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/logout_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        fancy:fb_borderColor="#00bfff"
        fancy:fb_borderWidth="5dp"
        fancy:fb_defaultColor="#000066"
        fancy:fb_focusColor="#9bd823"
        fancy:fb_radius="30dp"
        fancy:fb_text="Logout"
        fancy:fb_textColor="#FFFFFF" />
    <Spinner
        android:id="@+id/transactions_spinner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp" />
</LinearLayout>